{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./styles.css": {
      "import": "./dist/styles/index.css",
      "default": "./dist/styles/index.css"
    },
    "./*": {
      "import": "./dist/components/*/index.js",
      "types": "./dist/components/*/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json --outDir dist/components && tailwindcss -i ./src/styles.css -o ./dist/styles/index.css"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
